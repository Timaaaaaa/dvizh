<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/app_white</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.AppTheme.Translucent" />

    <style name="SplashTheme" parent="Base.AppTheme.Translucent">
        <item name="colorPrimaryDark">@color/purple_500</item>
    </style>

    <style name="DefaultTransparentDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_dark</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:textColor">@color/calendar_header_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarWeekDay">
        <item name="android:textColor">@color/calendar_weekday_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDate">
        <item name="android:textColor">@color/calendar_date_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCalendarView" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="mcv_arrowColor">@android:color/white</item>
        <item name="mcv_titleAnimationOrientation">horizontal</item>
    </style>

    <style name="MyTabLayoutAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/app_font_md</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>