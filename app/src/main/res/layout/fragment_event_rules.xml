<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingHorizontal="24dp"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/fragment_event_rules_return_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_white_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_event_rules_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Правила мероприятия"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/app_font_bd"
        app:layout_constraintTop_toTopOf="@id/fragment_event_rules_return_button"
        app:layout_constraintStart_toEndOf="@id/fragment_event_rules_return_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fragment_event_rules_return_button" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/fragment_event_rules_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_event_rules_thanksgiving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Спасибо, что выбрали нас!"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/app_font_bd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fragment_event_rules_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quisque eget rutrum nulla, non lacinia ligula. Phasellus sodales elementum auctor. Nullam ullamcorper mattis purus eu mattis. Nam vel cursus tellus, venenatis posuere orci.Quisque eget rutrum nulla, non lacinia ligula. Phasellus sodales elementum auctor. Nullam ullamcorper mattis purus eu mattis. Nam vel cursus tellus, venenatis posuere orci.Quisque eget rutrum nulla, non lacinia ligula.
