<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181a20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/fragment_password_generation_return_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_white_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_password_generation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Создание пароля"
            android:textColor="@color/white"
            android:textColorHint="#9D9E9E"
            android:textSize="24sp"
            android:layout_marginStart="17dp"
            app:layout_constraintStart_toEndOf="@id/fragment_password_generation_return_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_password_generation_return_button"
            app:layout_constraintBottom_toBottomOf="@id/fragment_password_generation_return_button"
            />

        <ImageView
            android:id="@+id/fragment_password_generation_image"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_password_creation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_password_generation_title"
            />

        <TextView
            android:id="@+id/fragment_password_generation_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Придумайте пароль"
            android:textColor="@color/purple_500"
            android:textColorHint="#9D9E9E"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_password_generation_image"
            />

        <EditText
            android:id="@+id/fragment_password_generation_edit_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_gradient_dark_grey_button"
            android:drawableLeft="@drawable/ic_auth_password"
            android:drawablePadding="16dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#9D9E9E"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_password_generation_title_1" />

        <ImageView
            android:id="@+id/fragment_auth_password_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_password_hidden"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/fragment_password_generation_edit_text_1"
            app:layout_constraintEnd_toEndOf="@id/fragment_password_generation_edit_text_1"
            app:layout_constraintTop_toTopOf="@id/fragment_password_generation_edit_text_1" />

        <EditText
            android:id="@+id/fragment_password_generation_edit_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_gradient_dark_grey_button"
            android:drawableLeft="@drawable/ic_auth_password"
            android:drawablePadding="16dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#9D9E9E"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_password_generation_edit_text_1" />

        <ImageView
            android:id="@+id/fragment_auth_password_show_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_password_hidden"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/fragment_password_generation_edit_text_2"
            app:layout_constraintEnd_toEndOf="@id/fragment_password_generation_edit_text_2"
            app:layout_constraintTop_toTopOf="@id/fragment_password_generation_edit_text_2" />


        <Button
            android:id="@+id/fragment_password_generation_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_purple_button"
            android:text="Продолжить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/fragment_auth_password_show_2" />

        <TextView
            android:id="@+id/fragment_password_generation_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажимая кнопку Создать, вы соглашаетесь с политикой конфеденциальности и правилами пользования."
            android:textColor="@color/white"
            android:textColorHint="#9D9E9E"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_password_generation_continue_button"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>