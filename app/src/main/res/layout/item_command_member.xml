<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/item_command_member_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gradient_dark_grey_button"
        android:fontFamily="@font/app_font_md"
        android:hint="Участник"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey_default"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/item_command_member_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_command_member_remove"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/bg_gradient_dark_grey_button"
        app:layout_constraintTop_toTopOf="@id/item_command_member_edit_text"
        app:layout_constraintStart_toEndOf="@id/item_command_member_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_command_member_edit_text" />
    
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintTop_toTopOf="@id/item_command_member_remove"
        app:layout_constraintStart_toStartOf="@id/item_command_member_remove"
        app:layout_constraintEnd_toEndOf="@id/item_command_member_remove"
        app:layout_constraintBottom_toBottomOf="@id/item_command_member_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>