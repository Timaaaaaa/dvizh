<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/fragment_create_organization_title_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="20.11.2023"
        android:textColor="@color/prompt_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_create_organization_title_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="Продолжительность"
        android:textColor="@color/prompt_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_create_organization_title_5" />

    <TextView
        android:id="@+id/fragment_registration_user_gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_gradient_dark_grey_button"
        android:hint="Выбрать время"
        android:textColorHint="@color/grey_default"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_create_organization_title_6"
        />

    <ImageView
        android:id="@+id/fragment_registration_user_birthday_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_registration_user_gender_spinner"
        app:layout_constraintEnd_toEndOf="@id/fragment_registration_user_gender_spinner"
        app:layout_constraintTop_toTopOf="@id/fragment_registration_user_gender_spinner"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_triangle_down"
        />

    <TextView
        android:id="@+id/fragment_create_organization_title_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Время начала"
        android:textColor="@color/prompt_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_registration_user_gender_spinner" />

    <TextView
        android:id="@+id/fragment_registration_user_gender_spinn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_gradient_dark_grey_button"
        android:hint="Выбрать время"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey_default"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/fragment_create_organization_title_8"
        tools:layout_editor_absoluteX="24dp" />

    <ImageView
        android:id="@+id/fragment_registration_user_birthday_icon_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_registration_user_gender_spinn"
        app:layout_constraintEnd_toEndOf="@id/fragment_registration_user_gender_spinn"
        app:layout_constraintTop_toTopOf="@id/fragment_registration_user_gender_spinn"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_triangle_down"
        />
</androidx.constraintlayout.widget.ConstraintLayout>